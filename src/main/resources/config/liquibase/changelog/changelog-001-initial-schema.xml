<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="siarhei.piashko" id="changelog-001-person">
        <sql>
            create table person (
            id SERIAL PRIMARY KEY,

            name TEXT NOT NULL
            );
        </sql>
        <rollback>
            drop table person;
        </rollback>
    </changeSet>

    <changeSet author="siarhei.piashko" id="changelog-001-cat">
        <sql>
            create table cat (
            id SERIAL PRIMARY KEY,

            name TEXT NOT NULL,
            age INTEGER NOT NULL,

            fk_owner INTEGER REFERENCES person (id) NOT NULL,
            fk_mother INTEGER REFERENCES cat (id),
            fk_father INTEGER REFERENCES cat (id)
            );
        </sql>
        <rollback>
            drop table cat;
        </rollback>
    </changeSet>

    <changeSet author="siarhei.piashko" id="changelog-003-person-data">
        <sql>
            insert into person (id, name)
            values (1, 'bob');
        </sql>
        <rollback>
            delete from person;
        </rollback>
    </changeSet>


    <changeSet author="siarhei.piashko" id="changelog-004-cat-data">
        <sql>
            insert into cat (id, name, age, fk_owner)
            values (1, 'cat1', 5, 1);
        </sql>
        <rollback>
            delete from cat;
        </rollback>
    </changeSet>

</databaseChangeLog>